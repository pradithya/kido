<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/sleep_header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/layer_header_card_background"
            android:orientation="horizontal"
            android:padding="4dp">

            <RelativeLayout
                android:id="@+id/sleep_header_left_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.progrema.superbaby.holograph.PieGraph
                    android:id="@+id/sleep_nap_night_pie_chart"
                    android:layout_width="@dimen/sleep_fragment_pie_chart"
                    android:layout_height="@dimen/sleep_fragment_pie_chart"
                    android:layout_marginRight="4dp"
                    app:pieInnerCircleRatio="128"
                    app:pieSlicePadding="0dp" />

                <TextView
                    android:id="@+id/night_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/sleep_nap_night_pie_chart"
                    android:text="@string/night_percentage_initial"
                    android:textSize="@dimen/text_size_micro" />

                <TextView
                    android:id="@+id/nap_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/night_percentage"
                    android:layout_toRightOf="@id/sleep_nap_night_pie_chart"
                    android:text="@string/nap_percentage_initial"
                    android:textSize="@dimen/text_size_micro" />

                <TextView
                    android:id="@+id/today_night_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sleep_nap_night_pie_chart"
                    android:text="@string/night_duration_initial"
                    android:textSize="@dimen/text_size_micro" />

                <TextView
                    android:id="@+id/today_nap_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/today_night_duration"
                    android:text="@string/nap_duration_initial"
                    android:textSize="@dimen/text_size_micro" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sleep_header_right_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.progrema.superbaby.holograph.PieGraph
                    android:id="@+id/sleep_active_sleep_pie_chart"
                    android:layout_width="@dimen/sleep_fragment_pie_chart"
                    android:layout_height="@dimen/sleep_fragment_pie_chart"
                    android:layout_marginRight="4dp"
                    app:pieInnerCircleRatio="128"
                    app:pieSlicePadding="0dp" />

                <TextView
                    android:id="@+id/sleep_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/sleep_active_sleep_pie_chart"
                    android:text="@string/sleep_percentage_initial"
                    android:textSize="@dimen/text_size_micro" />

                <TextView
                    android:id="@+id/active_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sleep_percentage"
                    android:layout_toRightOf="@id/sleep_active_sleep_pie_chart"
                    android:text="@string/active_percentage_initial"
                    android:textSize="@dimen/text_size_micro" />

                <TextView
                    android:id="@+id/today_sleep_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sleep_active_sleep_pie_chart"
                    android:text="@string/sleep_duration_initial"
                    android:textSize="@dimen/text_size_micro" />

                <TextView
                    android:id="@+id/today_active_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/today_sleep_duration"
                    android:text="@string/active_duration_initial"
                    android:textSize="@dimen/text_size_micro" />

            </RelativeLayout>

        </LinearLayout>

        <com.progrema.superbaby.widget.customview.ObserveableListView
            android:id="@+id/activity_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:dividerHeight="10dp"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:listSelector="@android:color/transparent"
            android:padding="4dp" />

    </LinearLayout>

    <include layout="@layout/layout_quick_button" />

</FrameLayout>
