<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/nursing_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="4dp"
            android:background="@drawable/layer_header_card_background"
            android:orientation="horizontal"
            android:padding="4dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.progrema.superbaby.holograph.PieGraph
                    android:id="@+id/nursing_left_right_pie_chart"
                    android:layout_width="@dimen/header_fragment_pie_chart"
                    android:layout_height="@dimen/header_fragment_pie_chart"
                    android:layout_marginRight="4dp"
                    app:pieInnerCircleRatio="128"
                    app:pieSlicePadding="0dp" />

                <TextView
                    android:id="@+id/percentage_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/nursing_left_right_pie_chart"
                    android:text="@string/nursing_left_percentage_initial"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_micro" />

                <TextView
                    android:id="@+id/percentage_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/percentage_left"
                    android:layout_toRightOf="@id/nursing_left_right_pie_chart"
                    android:text="@string/nursing_right_percentage_initial"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_micro" />

                <TextView
                    android:id="@+id/left_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nursing_left_right_pie_chart"
                    android:text="@string/nursing_left_today_initial"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_micro" />

                <TextView
                    android:id="@+id/right_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/left_today"
                    android:text="@string/nursing_right_today_initial"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_micro" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/last_side"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@drawable/ic_nursing_right" />

                <TextView
                    android:id="@+id/formula_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/last_side"
                    android:text="@string/nursing_left_today_initial"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_micro" />

            </RelativeLayout>


        </LinearLayout>

        <com.progrema.superbaby.widget.customview.ObserveableListView
            android:id="@+id/activity_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:dividerHeight="10dp"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:listSelector="@android:color/transparent"
            android:padding="4dp" />

    </LinearLayout>

    <include layout="@layout/layout_quick_button" />

</FrameLayout>