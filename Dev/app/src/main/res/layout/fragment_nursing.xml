<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:orientation="vertical">

    <com.progrema.superbaby.widget.customlistview.ObserveableListView
        android:id="@+id/activity_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="8dp"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:listSelector="@android:color/transparent" />

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_card_background"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <!-- Upper Left -->

                    <com.progrema.superbaby.holograph.PieGraph
                        android:id="@+id/nursing_left_right_pie_chart"
                        android:layout_width="@dimen/header_fragment_pie_chart_size"
                        android:layout_height="@dimen/header_fragment_pie_chart_size"
                        android:layout_margin="4dp"
                        app:pieInnerCircleRatio="160"
                        app:pieSlicePadding="0dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/nursing_left_right_pie_chart"
                        android:gravity="center">

                        <RelativeLayout
                            android:id="@+id/left_percent_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/percentage_left_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/legend_orange"
                                android:gravity="center_horizontal"
                                android:paddingLeft="4dp"
                                android:paddingTop="8dp"
                                android:text="Left"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/percentage_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_toRightOf="@id/percentage_left_title"
                                android:gravity="right|center_horizontal"
                                android:paddingRight="8dp"
                                android:paddingTop="8dp"
                                android:text="23 %"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/text_size_small" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/right_percent_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/left_percent_layout">

                            <TextView
                                android:id="@+id/percentage_right_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:paddingLeft="4dp"
                                android:text="Right"
                                android:textColor="@color/green"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/percentage_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_toRightOf="@id/percentage_right_title"
                                android:gravity="right|center_horizontal"
                                android:paddingBottom="4dp"
                                android:paddingRight="8dp"
                                android:text="77 %"
                                android:textColor="@color/green"
                                android:textSize="@dimen/text_size_small" />

                        </RelativeLayout>


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <!-- Bottom Left -->

                    <RelativeLayout
                        android:id="@+id/right_information_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:paddingTop="8dp"
                            android:paddingLeft="12dp"
                            android:text="Left"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/text_size_small" />

                        <TextView
                            android:id="@+id/left_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingTop="8dp"
                            android:paddingRight="8dp"
                            android:text="0h 26m 50s"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/text_size_small" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/left_information_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/right_information_layout">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:paddingLeft="12dp"
                            android:text="Right"
                            android:textColor="@color/green"
                            android:textSize="@dimen/text_size_small" />

                        <TextView
                            android:id="@+id/right_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="8dp"
                            android:text="0h 35m 10s"
                            android:textColor="@color/green"
                            android:textSize="@dimen/text_size_small" />

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <!-- Upper Right -->

                    <TextView
                        android:id="@+id/last_side_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nursing_last_side_title"
                        android:textColor="@color/green"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:textSize="@dimen/text_size_small" />

                    <ImageView
                        android:id="@+id/last_side"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingTop="4dp"
                        android:paddingRight="12dp"
                        android:src="@drawable/ic_nursing_right" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <!-- Bottom Right -->

                    <RelativeLayout
                        android:id="@+id/formula_information_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:paddingLeft="8dp"
                            android:paddingTop="8dp"
                            android:text="Formula"
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_size_small" />

                        <TextView
                            android:id="@+id/formula_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="12dp"
                            android:paddingTop="8dp"
                            android:text="5ml"
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_size_small" />

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/layout_quick_button" />

</FrameLayout>