<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/nursing_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="4dp"
            android:background="@drawable/layer_header_card_background"
            android:orientation="vertical"
            android:padding="4dp" >

            <TextView
                android:id="@+id/percentage_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/nursing_left_percentage_initial"
                android:textSize="@dimen/text_size_micro" />

            <TextView
                android:id="@+id/percentage_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/nursing_right_percentage_initial"
                android:textSize="@dimen/text_size_micro" />

            <TextView
                android:id="@+id/last_side"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/nursing_last_side_initial"
                android:textSize="@dimen/text_size_micro" />

            <TextView
                android:id="@+id/left_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/nursing_left_today_initial"
                android:textSize="@dimen/text_size_micro" />

            <TextView
                android:id="@+id/right_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/nursing_right_today_initial"
                android:textSize="@dimen/text_size_micro" />

            <TextView
                android:id="@+id/formula_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/nursing_left_today_initial"
                android:textSize="@dimen/text_size_micro" />

        </LinearLayout>

        <com.progrema.superbaby.widget.customview.ObserveableListView
            android:id="@+id/activity_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:dividerHeight="10dp"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:listSelector="@android:color/transparent"
            android:padding="4dp" />

    </LinearLayout>

    <include layout="@layout/layout_quick_button" />

</FrameLayout>