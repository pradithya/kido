<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/timeline_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/transparent_actionbar_color"
            android:orientation="vertical">

            <TextView
                android:id="@+id/timeline_header_baby_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safiya Salsabila"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/timeline_header_baby_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 year, 3 month, 12 day"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/timeline_header_baby_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/timeline_header_last_nursing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 hours ago"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/timeline_header_last_sleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 hours ago"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/timeline_header_last_diaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 hours ago"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>

        <com.progrema.superbaby.widget.customview.ObserveAbleListView
            android:id="@+id/activity_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>


    </LinearLayout>


    <include layout = "@layout/quick_button_layout" />

</FrameLayout>