<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink_transparent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/stopwatch_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@color/pink"
        android:textSize="32dp" />

    <LinearLayout
        android:id="@+id/container_stopwatch1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_stopwatch_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <com.progrema.superbaby.widget.stopwatch.Stopwatch
                android:id="@+id/chronometer_widget_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/transparent_black"
                android:textSize="50sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_stopwatch2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/title_stopwatch_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <com.progrema.superbaby.widget.stopwatch.Stopwatch
                android:id="@+id/chronometer_widget_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:textColor="@color/transparent_black"
                android:textSize="50sp" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/button_stopwatch_switch"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:background="@drawable/button_background"
        android:src="@drawable/ic_action_shuffle"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button_stopwatch_start"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/button_background"
                android:src="@drawable/ic_action_play" />

            <ImageButton
                android:id="@+id/button_stopwatch_pause"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/button_background"
                android:src="@drawable/ic_action_pause" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button_stopwatch_reset"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/button_background"
                android:src="@drawable/ic_action_refresh" />

            <ImageButton
                android:id="@+id/button_stopwatch_done"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/button_background"
                android:src="@drawable/ic_action_accept"
                android:text="Done" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>